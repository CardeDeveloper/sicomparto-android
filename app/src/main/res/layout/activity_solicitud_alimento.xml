<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/activity_general_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_solicitud"
        android:textSize="@dimen/activity_solicitud_title"
        android:textColor="@color/greenMain"
        android:paddingBottom="13dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipo de alimento que necesita"
        android:textSize="@dimen/activity_solicitud_secondary"
        android:textColor="@color/lightBlack"
        android:paddingBottom="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_categoria"
            android:textStyle="bold"
            android:textSize="19dp"
            android:paddingBottom="27dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/activity_solicitud_choose_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_expand_more_24px"
            android:backgroundTint="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/lacteos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/greenMain"
            android:hint="Lacteos"
            android:checked="true"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lacteos"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/carnes_rojas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/greenMain"
            android:hint="Carnes Rojas"
            android:checked="true"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/steak"/>

    </LinearLayout>


    <EditText
        android:id="@+id/activity_solicitud_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Describe alimentos y cantidades"
        android:textColor="@color/mainBlack"
        android:gravity="top"
        android:paddingTop="54dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="bottom|center">

        <ImageButton
            android:id="@+id/activity_solicitud_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/ic_baseline_arrow_forward_24px"
            android:backgroundTint="@color/greenMain"
            />

    </LinearLayout>

</LinearLayout>