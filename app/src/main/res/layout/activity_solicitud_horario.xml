<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/activity_general_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_solicitud"
        android:textSize="@dimen/activity_solicitud_title"
        android:textColor="@color/greenMain"
        android:paddingBottom="62dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Qué déas puede recibir la comida?"
        android:textColor="@color/mainBlack"
        android:textStyle="bold"
        android:textSize="@dimen/activity_solicitud_secondary"/>

    <EditText
        android:id="@+id/activity_solicitud_horario_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿A qué hora?"
        android:textColor="@color/mainBlack"
        android:textStyle="bold"
        android:textSize="@dimen/activity_solicitud_secondary"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Danos un rango de tiempo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="bottom|center">
        
        <Button
            android:id="@+id/activity_solicitud_horario_enviar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Enviar"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/greenMain"/>


    </LinearLayout>


</LinearLayout>