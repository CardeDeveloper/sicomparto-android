<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    android:background="@drawable/group2"
    android:padding="50dp"
    >

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invierte en"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        android:layout_marginTop="-20dp"
        android:textStyle="bold"
        />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="un mundo sin Hambre"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/logo_foreground"
        tools:srcCompat="@tools:sample/avatars"

        />

    <EditText
        android:layout_height="wrap_content"
        android:hint="CORREO"
        style="@style/EditLogin"
        android:layout_margin="10dp"/>

    <EditText
        android:layout_height="wrap_content"
        android:hint="CONTRASEÃ‘A"
        style="@style/EditLogin"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/activity_login_btn"
        android:layout_width="300dp"
        android:textColor="@android:color/white"
        android:text="INICIA SESION"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_login_background"
        android:layout_margin="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_gravity="center">
        <View
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="80dp"
            android:text=""
            android:layout_height="10dp"
            android:background="@drawable/btn_login2_background"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTRATE CON"
            android:textColor="@android:color/white"
            />
        <View
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="80dp"
            android:text=""
            android:layout_height="10dp"
            android:background="@drawable/btn_login2_background"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/email_app_background_round"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/facebook_logo_background_round"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/google_logo_background_round"/>
    </LinearLayout>


</LinearLayout>