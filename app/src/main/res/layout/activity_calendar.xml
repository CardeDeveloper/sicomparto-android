<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_solicitud_left_padding"
    android:paddingRight="@dimen/activity_right_margin"
    android:paddingTop="@dimen/activity_top_margin"
    tools:context=".ActivityCalendar">

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:firstDayOfWeek="1"
        android:focusedMonthDateColor="@color/mainBlack"
        android:unfocusedMonthDateColor="@color/lightBlack"
        android:weekSeparatorLineColor="@color/mainBlack"
        android:selectedWeekBackgroundColor="@color/greenMain"
        android:weekDayTextAppearance="@style/CalendarView"
        android:minDate="05/05/2019"
        android:maxDate="01/01/2020"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/activity_calendar_aceptar"
            android:layout_width="@dimen/button_layout_width"
            android:layout_height="@dimen/button_layout_height"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/aceptar_margin_button"
            android:text="@string/aceptar"
            android:textColor="@android:color/white"
            android:textSize="@dimen/button_text_size"
            android:background="@drawable/btn_comenzar_background"/>

        <Button
            android:id="@+id/activity_calendar_cancelar"
            android:layout_width="@dimen/button_layout_width"
            android:layout_height="@dimen/button_layout_height"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/cancelar_margin_button"
            android:text="@string/cancelar"
            android:textColor="@android:color/white"
            android:textSize="@dimen/button_text_size"
            android:background="@drawable/btn_comenzar_background"/>


    </RelativeLayout>


</RelativeLayout>